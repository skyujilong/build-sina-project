{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "resolveJsonModule":true,
        "alwaysStrict": true,
        "moduleResolution":"node",
        "lib": [
            "es5",
            "dom",
            "es2015.promise",
            "es2015.iterable",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include":[
        "lib/**.ts",
        "**.d.ts",
        "package.json"
    ],
    "exclude": [
        "node_modules"
    ]
}